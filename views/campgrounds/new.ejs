<% layout('/layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">Add new Campground</h1>
  <div class="col-mb-6 offset-md-3">
    <form
      action="/campgrounds"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label lass="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <input class="form-control" type="file" name="image" id="" multiple />
        <!-- <label lass="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          required
        /> -->
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label lass="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <input
          type="text"
          class="form-control"
          aria-label="Amount (to the nearest dollar)"
          name="campground[price]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <span class="input-group-text">.00</span>
      </div>
      <button type="submit" class="btn btn-primary">Add Campground</button>
    </form>
    <div class="text-center">
      <a class="btn btn-secondary" href="/campgrounds">Cancel</a>
    </div>
  </div>
</div>
